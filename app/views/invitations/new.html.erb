
<div class="container mt-4">
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

<h1>New Invitation</h1>
<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with(model: @invitation, url: invitations_path, method: :post) do |form| %>
  <!-- Dodaj pola formularza dla atrybutÃ³w zaproszenia -->
  <%= form.label :receiver_email %>
  <%= form.text_field :receiver_email %>

  <!-- Dodaj inne pola formularza zgodnie z Twoimi wymaganiami -->

  <%= form.submit 'Send', class: 'btn btn-primary' %>
<% end %>

</div>
