<div class="container mt-4">
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to 'Sent', sent_messages_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to 'Received', received_messages_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to 'New Message', new_message_path, class: 'nav-link' %>
  </li>
</ul>

<!-- Lista wiadomoÅ›ci -->
<% if params[:action] == 'sent' %>
  <h2>Sent Messages</h2>
  <%= render partial: 'messages_list', locals: { messages: @sent_messages } %>
<% elsif params[:action] == 'received' %>
  <h2>Received Messages</h2>
  <%= render partial: 'messages_list', locals: { messages: @received_messages } %>
<% end %>

</div>